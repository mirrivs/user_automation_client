{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-python-debug-server-linux",
      "type": "shell",
      "command": "bash",
      "args": [
        "${workspaceFolder}/.vscode/start_debug_server.sh",
        "${workspaceFolder}/env/bin/python",
        "${workspaceFolder}/main.py"
      ],
      "presentation": {
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^Ready to attach debugger$",
          "file": 1,
          "line": 1,
          "column": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Starting debug server",
          "endsPattern": "^Ready to attach debugger"
        }
      }
    },
    {
      "label": "start-python-debug-server-windows",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/start_debug_server.ps1",
        "-pythonPath", "${workspaceFolder}/env/Scripts/python.exe",
        "-scriptPath", "${file}"
      ],
      "presentation": {
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "reveal": "always"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^Ready to attach debugger$",
          "file": 1,
          "line": 1,
          "column": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Starting debug server",
          "endsPattern": "^Ready to attach debugger"
        }
      }
    }
  ]
}