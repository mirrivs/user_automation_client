{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug GUI (Linux - Remote Attach)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "preLaunchTask": "start-python-debug-server-linux"
    },
    {
      "name": "Python: Debug GUI (Windows - Remote Attach)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "preLaunchTask": "start-python-debug-server-windows"
    }
  ]
}